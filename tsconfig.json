{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "declaration": true,
    "lib": [
      "ES2017",
      "ES7",
      "ES6",
      "ES2021"
    ],
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": ".",
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "include": [
    "index.ts",
    "src/**/*",
    "*.ts"
  ],
  "exclude": [
    "examples/**/*",
    "**/*.spec.ts"
  ]
}