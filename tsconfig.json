{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "declaration": true,
    "lib": ["ES2017", "ES7", "ES6", "ES2021"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "src/**/*",
    "*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
